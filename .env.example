# Telegram bot token from @BotFather
BOT_TOKEN=your_telegram_bot_token

# Base chance to reply when bot is not directly addressed (0..1)
REPLY_PROBABILITY=0.08

# Minimal seconds between autonomous replies in the same chat
MIN_COOLDOWN_SEC=45

# Minimal model volume before generation is enabled
MIN_TOKENS_FOR_MODEL=200

# Max generated message length
MAX_REPLY_CHARS=280

# Telegram user id with extended permissions (/set, /seed, /setprob)
OWNER_ID=

# Lowercase all tokens before learning/generation (true/false)
NORMALIZE_LOWER=false

# SQLite database path
DB_PATH=markov.db

# Human-like typing delay boundaries before response
TYPING_MIN_MS=350
TYPING_MAX_MS=1100

# Randomness strength for generation (0..3): higher = more variety
RANDOMNESS_STRENGTH=2.0

# Primary Markov order: 2 or 3
MARKOV_ORDER=3

# Enable fallback to lower orders when higher-order transition is missing
ENABLE_BACKOFF=true

# Minimal order allowed for fallback: 1 or 2 (must be < MARKOV_ORDER)
BACKOFF_MIN_ORDER=1
